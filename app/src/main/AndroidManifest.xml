<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.delhitourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StayRoomActivity"
            android:label="@string/hotels_restaurants"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AtmActivity"
            android:label="@string/atm"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".HospitalsActivity"
            android:label="@string/hospitals"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MetroActivity"
            android:label="@string/metro_station"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>